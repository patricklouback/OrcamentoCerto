<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="250dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:id="@+id/clear"
        android:text="Limpar Dados"
        android:textColor="@color/botao"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintEnd_toStartOf="@id/save"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        />

    <ImageView
        android:id="@+id/save"
        android:src="@drawable/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintStart_toEndOf="@id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"

        />

     <View
    android:id="@+id/view"
    style="@style/view"
    android:layout_width="350dp"
    android:layout_height="430dp"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
        android:id="@+id/item1"
        style="@style/edit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="Preço do Item"
        android:inputType="numberDecimal"
        android:singleLine="false"
        app:layout_constraintEnd_toStartOf="@id/item2"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:maxLength="8"/>

    <EditText
        android:id="@+id/item2"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/item1"
        app:layout_constraintEnd_toEndOf="@id/view"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item3"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item1"
        app:layout_constraintStart_toStartOf="@id/item1"
        app:layout_constraintEnd_toEndOf="@id/item1"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item4"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item2"
        app:layout_constraintEnd_toEndOf="@id/item2"
        app:layout_constraintStart_toStartOf="@+id/item2"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item5"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item3"
        app:layout_constraintStart_toStartOf="@id/item3"
        app:layout_constraintEnd_toEndOf="@id/item3"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item6"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item4"
        app:layout_constraintEnd_toEndOf="@id/item4"
        app:layout_constraintStart_toStartOf="@+id/item4"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item7"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item5"
        app:layout_constraintStart_toStartOf="@id/item5"
        app:layout_constraintEnd_toEndOf="@id/item5"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item8"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item6"
        app:layout_constraintEnd_toEndOf="@id/item6"
        app:layout_constraintStart_toStartOf="@+id/item6"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item9"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item7"
        app:layout_constraintStart_toStartOf="@id/item7"
        app:layout_constraintEnd_toEndOf="@id/item7"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item10"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item8"
        app:layout_constraintEnd_toEndOf="@id/item8"
        app:layout_constraintStart_toStartOf="@+id/item8"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/item11"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item9"
        app:layout_constraintStart_toStartOf="@id/item9"
        app:layout_constraintEnd_toEndOf="@id/item9"
        app:layout_constraintBottom_toBottomOf="@id/view"

        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/item12"
        style="@style/edit"
        android:hint="Preço do Item"
        app:layout_constraintTop_toBottomOf="@+id/item10"
        app:layout_constraintEnd_toEndOf="@id/item10"
        app:layout_constraintStart_toStartOf="@+id/item10"
        app:layout_constraintBottom_toBottomOf="@id/view"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calcular"
        style="@style/calcular"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/item1"
        android:layout_marginTop="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/margem"
        style="@style/margem"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/item2"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/resultado"
        style="@style/resultado"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/calcular"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintBottom_toTopOf="@id/adView"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    //View Margem
    <View
        android:id="@+id/view_margen"
        style="@style/view"
        android:layout_width="350dp"
        android:layout_height="430dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/text_margem"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Insira a Margem de Lucro"
        app:layout_constraintTop_toTopOf="@id/view_margen"
        app:layout_constraintStart_toStartOf="@id/view_margen"
        app:layout_constraintEnd_toEndOf="@id/view_margen"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/container_edit"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/percent"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/percent"
        app:layout_constraintTop_toTopOf="@id/edit_margem"
        app:layout_constraintStart_toEndOf="@id/edit_margem"
        app:layout_constraintEnd_toEndOf="@id/margem_OK"
        app:layout_constraintBottom_toBottomOf="@id/edit_margem"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/edit_margem"
        style="@style/edit"
        android:hint="Margem"
        android:layout_width="100dp"
        app:layout_constraintTop_toTopOf="@+id/view_margen"
        app:layout_constraintEnd_toStartOf="@id/percent"
        app:layout_constraintStart_toStartOf="@+id/margem_OK"
        app:layout_constraintBottom_toTopOf="@id/margem_OK"
        android:layout_marginTop="100dp"
        android:inputType="number"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/margem_OK"
        style="@style/margem"
        android:text="OK"
        android:textSize="30sp"
        android:layout_width="155dp"
        app:layout_constraintTop_toBottomOf="@id/edit_margem"
        app:layout_constraintStart_toStartOf="@id/view_margen"
        app:layout_constraintEnd_toEndOf="@id/view_margen"
        app:layout_constraintBottom_toBottomOf="@id/view_margen"
        android:layout_marginBottom="100dp"
        android:visibility="invisible"
        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintTop_toBottomOf="@id/resultado"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4952434034505904/5192963493">
    </com.google.android.gms.ads.AdView>



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>